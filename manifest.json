{
    "name": "Kattis Hint Giver",
    "version": "1.0",
    "description": "Adds hints to problems on Kattis. Hint source: http://cpbook.net/methodstosolve",
    "permissions": ["storage", "https://cpbook.net/"], 
    "background": {
      "scripts": ["jquery.min.js", "data.js", "firstRun.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["https://open.kattis.com/problems/*"],
        "exclude_matches": ["https://open.kattis.com/problems/*/statistics", "https://open.kattis.com/problems/*/submit"],
        "run_at": "document_end",
        "js": ["jquery.min.js", "tooltip.js", "data.js", "addHint.js"]
      }
    ],
    "manifest_version": 2
  }